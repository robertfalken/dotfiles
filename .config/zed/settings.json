// documentation: https://zed.dev/docs/configuring-zed
{
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "font_family": "ZedMono Nerd Font"
  },
  "project_panel": {
    "dock": "right"
  },
  "theme": "Ros√© Pine Moon",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "relative_line_numbers": true,
  "tab_size": 2,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "language_overrides": {
    "Rust": {
      "inlay_hints": {
        "enabled": true
      }
    },
    "Ruby": {
      "formatter": {
        "external": {
          "command": "rufo",
          "arguments": ["-x"]
        }
      }
    }
    // "TSX": {
    //   "format_on_save": {
    //     "external": {
    //       "command": "/opt/homebrew/bin/prettierd",
    //       "arguments": ["--stdin-filepath", "{buffer_path}"]
    //     }
    //   }
    // }
  }
}
